<html>
	<head>
		<title>Database CDs</title>
		<script src="../javascript/cd.js"></script>
		<link rel="stylesheet" type="text/css" href="../css/cd.css" />
		
	</head>
	<body>
		<!--RESULT SERVER: -->
	    <hr>
	    <h1>CD</h1>
	    <div id="divCdSelect">
			<h2>CD Select</h2>
			<!--<button onclick="getDataCD('api/cd')">getCD</button>-->
			<select id="CDs" onchange="selectCD(event)"></select>
			<h3>Genre</h3>
			<p id="cdGenre"></p>
			<h3>Plot</h3>
			<p id="cdPlot"></p>
	    </div>
	    <div id="divPoster">
			<img id="cdPoster" src="">
	    </div>
		<div id="divCdIn">
			<h2>CD input</h2>
			<label class="lblCdIn">id:</label>      <input type="text" id="id"/><br />
			<label class="lblCdIn">title:</label>   <input type="text" id="title"/><br />
			<label class="lblCdIn">year:</label>    <input type="text" id="year"/><br />
			<label class="lblCdIn">origin:</label>  <input type="text" id="origin"/><br />
			<label class="lblCdIn">remarks:</label> <input type="text" id="remarks"/><br />
			<button onclick="addCD()">AddDVD</button> 
			<button onclick="putDataDVD('api/cd')">updateCD</button>
			<button onclick="deleteCD('api/cd', 'cd')">deleteCD</button>
		</div>
		<div id ="divCdOptions">
			<h2>Optional</h2>
			<h3>Add artist to CD</h3>
			<select id="cd_artists" onchange="selectArtist(event)" >
				<option value="artists">actors</option>                                            
			</select>
			<button onclick="addArtisttoCD()">AddArtisttoCD</button><br>
			<h3>Add genre to CD</h3>
			<select id="cd_genres" onchange="selectGenre(event)">
				<option value="genres">genres</option>
			</select>
			<button onclick="addGenretoCD()">AddGenretoCD</button><br>
		</div>
		<hr>
		<div id=demo2>
			<h1>ARTIST</h1>
			<h2>Artist Select</h2>
			<select id="artists" onchange="selectArtist(event)" ></select>
			<select id="subCDsA" onchange="selectCD(event)"></select>
			<h2>Artist Info</h2>
	  	    id_artist:<input type="text" id="id_artist"/><br />
			artistname:<input type="text" id="artistname"/><br />
			<button onclick="addArtist()">AddActor</button>
            <button onclick="putDataArtist('api/artist')">updateActor</button>
			<button onclick="deleteArtist('api/artist', 'artist')">deleteArtist</button>
			<!--<button onclick="getDataArtist('api/artist')">getArtist</button><br>-->
		</div>
			
		<hr>
		<div id=demo3>
			<h1>GENRE:</h1>
	   	    id_genre:<input type="text" id="id_genre"/><br />
			genrename:<input type="text" id="genrename"/><br />
			<button onclick="addGenre()">AddGenre</button><br>
			<br>
			<!--<button onclick="getDataGenre('api/genre')">getGenre</button><br>-->
			<select id="genres" onchange="selectGenre(event)">
				<option value="genres">genres</option>
			</select>
			<select id="subCDsG" onclick="selectCD(event)">
			</select><br>
			<br>
            <button onclick="putDataGenre('api/genre')">updateGenre</button><br>
			<br>
	        <button onclick="deleteGenre('api/genre', 'genre')">deleteGenre</button><br>
		</div>
		<hr>
    </body>
</html>
